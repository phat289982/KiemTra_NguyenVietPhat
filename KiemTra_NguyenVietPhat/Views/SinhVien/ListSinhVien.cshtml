@model  IEnumerable<KiemTra_NguyenVietPhat.Models.SinhVien>
@{
    ViewBag.Title = "ListSinhVien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListSinhVien</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã SV </th>
        <th> Họ và Tên</th>
        <th> Giới Tính </th>
        <th> Ngày Sinh</th>
        <th> Hình </th>
        <th> Mã Ngành</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaSV)</td>
            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
            <td><img src="@item.Hinh" alt="hinh thumbnail" width="280" height="200" /></td>
            <td>@Html.DisplayFor(modelItem => item.MaNganh)</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.MaSV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
            </td>
        </tr>
    }
</table>
